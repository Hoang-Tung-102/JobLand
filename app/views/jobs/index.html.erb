<div>
  <div class="menuCompanyJobs">
  	<% if @company.images.attached? %>
      <%= image_tag @company.images.first, :style => "width: 50px; height: 50px; border-radius: 50%;" %>
    <% else %>
      <%= image_tag('no-image.jpg', :style => "width: 50px; height: 50px; border-radius: 50%;") %>
    <% end %>
    <div class="nameCompanyjobs"><%= @company.full_name %></div>
    <div class="navCompanyJobs">
      <%= link_to "Home", company_path(@company) %>
      <%= link_to "Jobs", company_jobs_path(@company) %>
    </div>
  </div>
</div>
<div class="col-md-2"></div>
<div class="col-md-6">
	<% @jobs.each do |job_new| %>
		<div class="count-job col-md-12">
		  <div class="row">
			    <div class="img-job col-md-12">
			      <% if job_new.images.attached? %>
            	<%= link_to image_tag(job_new.images, class: "post-img"),job_path(job_new) %>
		        <% else %>
		          <%= link_to image_tag('no-image.jpg', class: "post-img"),job_path(job_new)%>
		        <% end %>
			    </div>
			    <div class="title-job col-md-12">
		  			<%= link_to job_new.title, job_path(job_new) %>
			    </div>
		    <div class="about-job col-md-12">
		      <p><%= job_new.what.first(80) %>...</p>
		      </div>
		    <div class="name-company-job col-md-12">
		         <td> <%= link_to job_new.area, job_path(job_new.id) %> </td>
		    </div>
		      <div class="name-company-job col-md-12">
		         <td> <%= link_to job_new.salary, job_path(job_new.id) %> $ </td>
		    </div>
		  </div>
		</div>
	<% end %>
</div>
